    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_config"
    app:startDestination="@+id/nav_assistant">

    <fragment
        android:id="@+id/nav_commands"
        android:name="net.emilla.config.CommandsFragment"
        android:label="@string/title_commands"
        tools:layout="@layout/fragment_commands" />

    <fragment
        android:id="@+id/nav_assistant"
        android:name="net.emilla.config.AssistantFragment"
        android:label="@string/title_assistant"
        tools:layout="@layout/fragment_assistant" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="net.emilla.config.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
