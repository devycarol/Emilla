<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Perfect rectangle :) -->
    <style name="ShapeAppearance" />

    <style name="Preference.Category.Emilla" parent="Preference.Category.Material">
        <item name="android:layout">@layout/preference_category_emilla</item>
        <item name="iconSpaceReserved">false</item>
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">false</item>
    </style>

    <style name="Preference.Emilla" parent="Preference.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Preference.SwitchPreference.Emilla" parent="Preference.SwitchPreference.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Preference.DialogPreference.Emilla" parent="Preference.DialogPreference.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Preference.EditTextPreference.Emilla" parent="Preference.DialogPreference.EditTextPreference.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Preference.CommandPreference.Emilla" parent="Preference.EditTextPreference.Emilla">
        <item name="android:widgetLayout">@layout/prefrence_widget_switch</item>
    </style>

    <style name="SettingsTheme" parent="PreferenceThemeOverlay">
        <item name="preferenceCategoryStyle">@style/Preference.Category.Emilla</item>
        <item name="preferenceStyle">@style/Preference.Emilla</item>
        <item name="switchPreferenceStyle">@style/Preference.SwitchPreference.Emilla</item>
        <item name="dialogPreferenceStyle">@style/Preference.DialogPreference.Emilla</item>
        <item name="editTextPreferenceStyle">@style/Preference.EditTextPreference.Emilla</item>
        <item name="commandPreferenceStyle">@style/Preference.CommandPreference.Emilla</item>
    </style>

    <style name="EmillaPreferenceCategoryTitleTextStyle">
        <item name="android:textAppearance">?attr/preferenceCategoryTitleTextAppearance</item>
        <item name="android:textColor">?attr/preferenceCategoryTitleTextColor</item>
    </style>

    <style name="AlertDialog.Emilla" parent="AlertDialog.AppCompat">
        <item name="android:layout">@layout/alert_dialog_emilla</item>
    </style>

    <style name="Widget.Emilla.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance</item>
        <item name="backgroundTint">@color/bg_text_button</item>
        <!-- TODO: make this a ripple that just holds the ripple color when held. Currently it just
              adds the ripple color on top of the pressed color which is not ideal. Examine the
              Android accessibility consent dialog because that's goated.. -->
    </style>

    <style name="TextAppearance.Emilla.Button" parent="TextAppearance.AppCompat.Button">
        <item name="textAllCaps">false</item>
    </style>

</resources>
